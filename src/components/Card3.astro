---
interface Props {
    text1 : string;
    text2 : string;
    img: string
}

const {text1, text2, img} = Astro.props;

---

<article class="flex flex-col items-center">
    <img class="w-max pb-5" src={img} alt="">
    <h3 class="text-xl text-pretty font-bold text-pdgblue">{text1}</h3>
    <p class="text-sm mt-2 text-pgblue">{text2}</p>
</article>